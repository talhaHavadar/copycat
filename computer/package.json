{
  "name": "copycat-computer",
  "version": "1.0.0",
  "description": "A minimal Electron application",
  "private": false,
  "main": "public/electron.js",
  "build": {
    "appId": "com.talhahavadar.copycat",
    "productName": "CopyCat - A Shared Clipboard",
    "copyright": "Copyright Â© 2019 ${author}",
    "win": {
      "icon": "build/assets/icon.png"
    },
    "files": [
      "*.js",
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories":{
      "buildResources": "assets"
    }
  },
  "homepage": "./",
  "scripts": {
    "dev": "react-scripts start",
    "start": "concurrently \"cross-env BROWSER=none react-scripts start\" \"wait-on http://localhost:3000 && electron .\"",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "pack": "electron-builder",
    "dist": "npx build --x64 --macos --win --linux --c.extraMetadata.main=build/electron.js -p always"
  },
  "repository": "https://github.com/talhaHavadar/copycat",
  "keywords": [
    "copycat",
    "shared",
    "clipboard",
    "among your devices"
  ],
  "author": {
    "name": "Talha Can Havadar",
    "email": "havadartalha@gmail.com",
    "url": "https://talhahavadar.com"
  },
  "license": "GPLv3",
  "devDependencies": {
    "concurrently": "^4.1.0",
    "cross-env": "^5.2.0",
    "electron": "^5.0.2",
    "electron-builder": "^20.43.0",
    "electron-devtools-installer": "^2.2.4",
    "react-scripts": "3.0.1",
    "wait-on": "^3.2.0"
  },
  "dependencies": {
    "dat-swarm-defaults": "^1.0.2",
    "discovery-swarm": "^6.0.0",
    "electron-is-dev": "^1.1.0",
    "get-port": "^5.0.0",
    "react": "^16.8.6",
    "react-dev-utils": "^9.0.1",
    "react-dom": "^16.8.6",
    "uuidv4": "^4.0.0"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
